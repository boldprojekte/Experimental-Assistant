# Qdrant Configuration
QDRANT_URL=https://your-cluster.qdrant.io:6333
QDRANT_API_KEY=your-qdrant-api-key
QDRANT_COLLECTION=your-collection-name

# OpenAI Configuration
OPENAI_API_KEY=sk-proj-your-openai-api-key

# Cohere Configuration (optional - for reranking)
COHERE_API_KEY=your-cohere-api-key
USE_COHERE_RERANK=false  # Set to true to enable Cohere reranking

# LlamaParse Configuration (optional - for advanced PDF parsing)
LLAMA_CLOUD_API_KEY=llx-your-llamaparse-api-key
USE_LLAMA_PARSE=false

# RAG Configuration
RAG_CHUNK_SIZE=800                   # Optimal: 500-800 tokens (smaller = better retrieval)
RAG_CHUNK_OVERLAP=80                 # 10% overlap
RAG_SIMILARITY_TOP_K=5               # Final number of results to return
RAG_SPARSE_TOP_K=12                  # Number of results from each sparse/dense search
RAG_SCORE_THRESHOLD=0.2              # Minimum relevance score (0.0-1.0)
RAG_RERANK_TOP_N=5                   # Final results after Cohere reranking
RAG_RERANK_CANDIDATES=20             # Candidates sent to Cohere (higher = better reranking)

# Chunking Strategy
USE_SEMANTIC_CHUNKING=false          # true = semantic (slower, better quality), false = markdown-aware (fast)
SEMANTIC_THRESHOLD=95                # Breakpoint percentile for semantic chunking (90-99, higher = fewer breaks)
